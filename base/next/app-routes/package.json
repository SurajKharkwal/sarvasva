{
  "name": "@sarvasva-app/next-app",
  "version": "0.0.3",
  "description": "A helper for @sarvasva-app",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "./dist/index.js"
  ],
  "bin": {
    "@sarvasva-app/next-app": "./dist/index.js"
  },
  "keywords": [
    "sparse-clone",
    "cli",
    "next.js",
    "sarvasva"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SurajKharkwal/sarvasva.git"
  },
  "author": "Suraj Kharkwal",
  "license": "MIT",
  "scripts": {
    "dev": "bun ./index.ts",
    "test": "bun ./dist/index.js",
    "clean": "rm -rf ./dist/",
    "build": "bun run clean && bun build index.ts --outdir dist --minify --bundle --target=node --banner.node=\"#!/usr/bin/env node\"",
    "prerelease": "bun run clean && bun run build",
    "release": "bun publish --access public"
  },
  "devDependencies": {
    "@repo/core": "*",
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
