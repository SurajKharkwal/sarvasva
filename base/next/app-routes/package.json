{
  "name": "@sarvasva-cli/next-app",
  "main": "./dist/index.js",
  "type": "module",
  "version": "0.0.0",
  "description": "A helper for sarvasva cli",
  "keywords": [
    "sparse-clone"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SurajKharkwal/sarvasva.git"
  },
  "author": "Suraj Kharkwal",
  "license": "MIT",
  "scripts": {
    "dev": "bun index.ts init",
    "start": "bun ./dist/index.js",
    "clean": "rm -rf ./dist/",
    "build": "bun run clean && bun build index.ts --outdir dist --minify --bundle --target=node ",
    "prerelease": "bun run clean && bun run build",
    "release": "bun publish --access public"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@flyinghawk/sparse-clone": "^0.0.6",
    "@types/bun": "latest",
    "@types/validate-npm-package-name": "^4.0.2",
    "commander": "^14.0.0",
    "validate-npm-package-name": "^6.0.2",
    "zx": "^8.8.0"
  }
}
